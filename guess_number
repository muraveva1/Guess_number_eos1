#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
 

int main()
{
    int n;
    int x;
    int count = 0;
 
    srand(time(0));
    n = rand()%100 + 1;
 
    cout << "Igra 'ugadai chislo'" << endl 
         << "Computer zadumal chislo ot 1 do 100" << endl
         << "Ugadaite ego za 5 popitok." << endl;
 
    do 
    {
        cout << "\nVvedite chislo i nashmite 'enter'\n\t-> ";
        cin >> x;
        if (x == n) cout << "Ura! Vi ugadali!";
        count++; 
        if ( x  >n) cout << "Your number is greater than the one we are thinking about." << endl;
        if ( x < n) cout << "Your number is less than the one we have envisioned." << endl;
    } while (x!=n && count<5);
    if (x!=n && count<5)
    cout <<"You used five attempts. Game over"<< endl;
    
    cout << "STATISTIC" << "\n";
    cout << "Number of retries: " << n  << "\n";
 
 
    return 0;
}
